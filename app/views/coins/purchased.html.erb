<div class="container">
<header class="relative mountain2-bg">

  <h1 class="black absolute heading-overlay">Crypto Investments</h1>
  <h2 class="grey absolute heading-overlay6">Update Investment
    <div>
      <h3 class= "red">
        <% flash_types.select{ |kind| flash.has?(kind) }.each do |kind| %>
          <div class="flash <%= kind %>">
            <%= flash[kind] %>
          </div>
          <% end %>
      </h3>
    </div><br>
  </h2>

    <div class="black absolute heading-overlay9">
        <h3><%= "#{@coin.name}"%></h3>
        <p><%= "Coin Symbol:#{@coin.symbol}"%></p>
        <p><%= "Coin Quantity:#{@coin.quantity}"%></p>
        <p><%= "Amount Invested:#{@coin.amount_invested.round(2)}"%></p>
        <p><%= "Average Coin Price:#{@coin.average_coin_price.round(2)}"%></p>
    </div>

    <h3 class="black absolute heading-overlay10">
        <form action= "/coins/<%= @coin.id %>/purchased" method= "post">
        <input id="hidden" type="hidden" name="_method" value="patch">
            <label>Quantity Purchased<label><br>
            <input type = "text" name = "quantity"id = "quantity">
            <br><label>Amount Paid<label><br>
            <input type = "text" name = "cost"id = "cost"><br>
            <input type= submit value= "UPDATE" class="red bold">
        </form>
   </h3>

  <div class="sidebarss">
    <h3 class=absolute heading-overlay>Links</h3><br>
      <li><b><br><a href="/logout" class="grey" >Log Out</a><br></li>
      <li><b><br><a href="/coins" class="grey" >All Crypto Investments</a><br></li>
  </div> 
</div>